{% extends 'base.html.twig' %}
{% block title%}Contact{% endblock %}
{% block body %}
    <div class="brand_color">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="titlepage">
                        <h2>Contact Us</h2>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- contact -->
    <div class="contact">
        <div class="container">
            <div class="row">
                <div class="col-md-12">

                    {{ form_start(form, {'attr': {'class':'form-horizontal'}}) }}
                        {{ form_errors(form) }}
                            <div class="form-group">
                                <div class="col-xs-6">
                                    {{ form_row(form.name, {'attr': {'class':'form-control'}}) }}
                                </div>  
                            </div>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    {{ form_row(form.email, {'attr': {'class':'form-control'}}) }}
                                </div>
                                <div class="col-xs-12">
                                    {{ form_row(form.phone, {'attr': {'class':'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    {{ form_row(form.message, {'attr': {'class':'form-control'}}) }}
                                    {{ form_row(form.Send, {'attr': {'class':'pull-right btn btn-lg sr-button'}}) }}
                                </div>
                            </div>
                        {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    <!-- end contact -->

{% endblock %}